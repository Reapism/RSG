<UserControl
    x:Class="RSG.View.Views.Settings.SelectionSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RSG.View.Views.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />

            </Grid.RowDefinitions>
            <Image
                Grid.Column="1"
                Margin="15"
                Source="/Resources/grayscale/settings.png" />
            <Image
                Grid.Column="2"
                Margin="15"
                Source="/Resources/grayscale/set.png" />
            <Image
                Grid.Row="1"
                Grid.Column="1"
                Margin="15"
                Source="/Resources/grayscale/remove.png" />
            <Image
                Grid.Row="1"
                Grid.Column="2"
                Margin="15"
                Source="/Resources/grayscale/add.png" />
        </Grid>
    </Grid>
</UserControl>
