<UserControl
    x:Class="RSG.View.Views.StringEditView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RSG.View.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Grid>
        <Grid
            MinWidth="300"
            HorizontalAlignment="Stretch"
            Background="White">
            <GroupBox Header="Generate">
                <GroupBox.Background>
                    <RadialGradientBrush>
                        <GradientStop Offset="1" Color="#FFB9B9B9" />
                        <GradientStop Offset="0" Color="#FFE8E8E8" />
                    </RadialGradientBrush>
                </GroupBox.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>
                    <StackPanel>
                        <TextBox Margin="5" HorizontalAlignment="Stretch" />
                        <TextBox Margin="5" HorizontalAlignment="Stretch" />
                        <ComboBox Margin="5" HorizontalAlignment="Stretch" />
                        <Button Margin="5" Content="Generate" />
                    </StackPanel>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <GroupBox Header="Generation Settings">
                            <StackPanel>
                                <TextBlock
                                MinHeight="50"
                                Margin="5"
                                Padding="5,10,5,10"
                                Background="Transparent"
                                Text="ABCDEFGHIJKLMNAOPQRSTUVWXYZabcdefghijklmnaopqrstuvwxyz0123456789"
                                TextWrapping="Wrap">
                                    <TextBlock.TextEffects>
                                        <TextEffect
                                        Foreground="#FF389FDA"
                                        PositionCount="5"
                                        PositionStart="0" />
                                        <TextEffect
                                        Foreground="#FF7056C9"
                                        PositionCount="5"
                                        PositionStart="5" />
                                    </TextBlock.TextEffects>
                                </TextBlock>
                                <Button
                                MinHeight="20"
                                Margin="5"
                                Background="Transparent"
                                Content="Add Characters" />
                                <Button
                                MinHeight="20"
                                Margin="5"
                                Background="Transparent"
                                Content="Remove Characters" />
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Grid.Row="1" Header="Character Presets">
                            <StackPanel>
                                <Button Margin="5" Content="Passwords" />
                                <Button Margin="5" Content="Hash" />
                                <Button Margin="5" Content="Guid" />
                            </StackPanel>
                        </GroupBox>
                    </Grid>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
